<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".fragments.InfoPlaceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:background="@color/white"></View>

        <LinearLayout
            android:id="@+id/list_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_favorito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/ic_baseline_favorite_black_24" />

        <ImageView
            android:id="@+id/iconos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_share_black_24" />

        <LinearLayout
            android:id="@+id/descripcion_lugar"
            android:layout_width="3400dp"
            android:layout_height="60dp"
            android:layout_below="@id/iconos"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_library_books_24"></ImageView>

            <TextView
                android:id="@+id/txt_descripcion_lugar"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/txt_descripcion_fragment_info_place"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/direccion_lugar"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/direccion_lugar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/descripcion_lugar">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_house_24"></ImageView>

            <TextView
                android:id="@+id/txt_direccion_lugar"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/txt_direccion_fragment_info_place"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/schedule_place_linear"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/schedule_place_linear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/direccion_lugar"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_calendar_today_24"></ImageView>

            <TextView
                android:id="@+id/schedule_place"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/txt_horarios_fragment_info_place"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/phone_place_linear"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/phone_place_linear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/schedule_place_linear"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_local_phone_24"></ImageView>

            <TextView
                android:id="@+id/phone_place"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/txt_telefono_fragment_info_place"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </LinearLayout>

        <fragment
            android:id="@+id/mapa_crear_lugar"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_below="@id/phone_place_linear"
            android:layout_height="450dp" />

    </RelativeLayout>

</ScrollView>