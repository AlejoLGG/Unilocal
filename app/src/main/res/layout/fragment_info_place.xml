<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InfoPlaceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/imagen_detalles_lugar">

        <View
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:background="@color/black"></View>

        <LinearLayout
            android:id="@+id/list_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

            <TextView
                android:id="@+id/s_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:fontFamily="@font/font_awesome_6_free_solid_900"
                android:text="\uf005"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_descipcion_lugar"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:text="Descipcion del lugar"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_direccion_lugar"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt_descipcion_lugar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Direccion"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/btn_favorito"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="58dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_baseline_favorite_24" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_baseline_share_24" />


    </RelativeLayout>

</FrameLayout>