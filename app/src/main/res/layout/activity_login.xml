<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center|center_horizontal"
        android:text="@string/txt_titulo_login"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_layout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:startIconDrawable="@drawable/ic_baseline_email_24">

        <EditText
            android:id="@+id/email_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_forms"
            android:inputType="textEmailAddress"
            android:hint="@string/txt_correo"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        android:layout_width="300dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        app:startIconDrawable="@drawable/ic_baseline_lock_24">

        <EditText
            android:id="@+id/password_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_forms"
            android:inputType="textPassword"
            android:hint="@string/txt_password" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="end|center_horizontal"
        android:text="@string/txt_password_Forget"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/color1"
        android:textColor="@color/black"
        android:text="@string/txt_iniciar_sesion"></Button>

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/color5"
        android:textColor="@color/black"
        android:text="@string/txt_registrarse"></Button>

</LinearLayout>