    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_lock_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_layout"
            style="@style/til_form"
            android:layout_width="316dp">

            <EditText
                android:id="@+id/moderator_password"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:background="@drawable/fondo_forms"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:hint="@string/txt_password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirm_password_layout"
        style="@style/til_form">

        <EditText
            android:id="@+id/moderator_password_confirm"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_forms"
            android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
            android:hint="@string/txt_password_confirm"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>>


    </LinearLayout>

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/color1"
        android:text="@string/txt_btn_crear"
        android:textColor="@color/black"></Button>

</LinearLayout>